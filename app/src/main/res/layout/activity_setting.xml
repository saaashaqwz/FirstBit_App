<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.SettingActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/magenta"
        android:layout_marginBottom="120dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/btn_back"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/icon_back"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_avatar_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/icon_login"
        android:layout_below="@+id/app_bar_settings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <EditText
        android:id="@+id/settings_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_avatar_image"
        android:hint="Ваше имя"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:fontFamily="@font/inter"
        android:background="@drawable/product_item_border" />

    <EditText
        android:id="@+id/settings_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_fullname"
        android:hint="Ваш номер"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:fontFamily="@font/inter"
        android:background="@drawable/product_item_border" />

        <TextView
            android:id="@+id/btn_save_settings"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settings_phone"
            android:text="Сохранить"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:padding="16dp"
            android:background="@drawable/button_primary"
            android:layout_marginTop="30dp" />

</RelativeLayout>